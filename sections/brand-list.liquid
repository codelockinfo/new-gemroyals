<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

{% schema %}
{
  "name": "Brand List",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "Brand Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand list"
    }
  ]
}
{% endschema %}

{% style %}
  .brand-list-section {
    background-color: {{ section.settings.background_color }};
    padding: 40px 20px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .brand-list-container {
    max-width: 1440px;
    margin: 0 auto;
  }

  .brand-list-wrapper {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 2rem;
  }

  .brand-logo {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-logo img {
    max-width: 100%;
    height: auto;
  }

  @media screen and (max-width: 768px) {
    .brand-list-wrapper {
      display: none; /* Hide grid on mobile */
    }
    .brand-slider {
      display: block;
    }
  }

  @media screen and (min-width: 769px) {
    .brand-slider {
      display: none;
    }
  }
{% endstyle %}

<div class="brand-list-section">
  <div class="brand-list-container">
    
    <!-- Desktop Grid -->
    <div class="brand-list-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.brand_image %}
          <div class="brand-logo">
            <img
              src="{{ block.settings.brand_image | image_url: width: 300 }}"
              alt="Brand Logo"
              loading="lazy"
            >
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Mobile Swiper Slider -->
    <div class="swiper brand-slider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.brand_image %}
            <div class="swiper-slide brand-logo">
              <img
                src="{{ block.settings.brand_image | image_url: width: 300 }}"
                alt="Brand Logo"
                loading="lazy"
              >
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.brand-slider', {
      slidesPerView: 3,
      spaceBetween: 20,
      loop: true,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false
      },
      breakpoints: {
        0: {
          slidesPerView: 2
        },
        480: {
          slidesPerView: 3
        }
      }
    });
  });
</script>