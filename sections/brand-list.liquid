{% schema %}
{
  "name": "Brand List",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "Brand Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand list"
    }
  ]
}
{% endschema %}

{% style %}
  .brand-list-section {
    background-color: {{ section.settings.background_color }};
    padding: 40px 20px;
  }

  .brand-list-wrapper {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .brand-logo {
    max-height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-logo img {
    max-height: 80px;
    max-width: 100%;
    height: auto;
    width: auto;
  }
{% endstyle %}

<div class="brand-list-section">
  <div class="brand-list-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.brand_image %}
        <div class="brand-logo">
          <img
            src="{{ block.settings.brand_image | image_url: width: 300 }}"
            alt="Brand Logo"
            loading="lazy"
          >
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
