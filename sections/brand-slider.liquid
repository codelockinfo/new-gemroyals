{% schema %}
{
  "name": "Diamond Shape Collection",
  "settings": [],
  "blocks": [
    {
      "type": "shape",
      "name": "Diamond Shape",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Diamond Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Shape Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Diamond Shapes Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="shopify-section diamond-shapes-wrapper">
  <div class="page-width text-center">
    <h2 class="text-3xl font-bold mb-6">Shop Diamonds by Shape</h2>

    <div class="flex flex-wrap justify-center gap-8 margin-auto">
      {% for block in section.blocks %}
        <div class="shape-item text-center w-24">
          <a href="{{ block.settings.link }}">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="{{ block.settings.name }}" class="mx-auto mb-2" />
            {% endif %}
            <p class="text-sm font-medium capitalize">{{ block.settings.name }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .diamond-shapes-wrapper {
    padding: 40px 0;
  }

  .diamond-shapes-wrapper img {
    max-height: 80px;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .diamond-shapes-wrapper .shape-item {
      width: 80px;
    }
  }
</style>