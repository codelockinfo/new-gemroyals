{% schema %}
{
  "name": "Diamond Shape Collection",
  "settings": [],
  "blocks": [
    {
      "type": "shape",
      "name": "Diamond Shape",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Diamond Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Shape Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Diamond Shapes Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="diamond-shapes text-center">
  <h2 class="text-3xl font-bold mb-6">Shop Diamonds by Shape</h2>
  <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-6 gap-6">
    {% for block in section.blocks %}
      <div class="shape-item text-center">
        <a href="{{ block.settings.link }}">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="{{ block.settings.name }}" class="mx-auto mb-2" />
          {% endif %}
          <p class="text-sm font-medium">{{ block.settings.name }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .diamond-shapes img {
    max-height: 80px;
    object-fit: contain;
  }
  .shape-item{
    display: flex;
  }
</style>